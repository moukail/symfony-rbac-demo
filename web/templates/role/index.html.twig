{% extends 'base.html.twig' %}

{% block title %}Role index{% endblock %}
{% block body_class %}d-flex flex-column h-100{% endblock %}
{% block body %}

    {% include 'header.html.twig' %}

    <!-- Begin page content -->
    <main>
        <div class="container">
            <h2 class="mt-5">Roles</h2>
            <a href="{{ path('app_role_new') }}">Create new</a>
            <div class="table-responsive small">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">actions</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for role in roles %}
                        <tr>
                            <td>{{ role.name }}</td>
                            <td>
                                <a href="{{ path('app_role_show', {'id': role.id}) }}">show</a>
                                <a href="{{ path('app_role_edit', {'id': role.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    {% include 'footer.html.twig' %}

{% endblock %}
